			echo "$orange Please Enter Valid Number"
		fi
	elif [ "$response" == n ];then
		echo "$blue You Dont want to change The value"
	else
		echo "$red Please Enter valid Value!!!"
	fi
fi


if [ "$parameter" == icmp_echo_ignore_all ];then
	echo "icmp_ratelimit => ICMP echo requests [For More Info press i ]"
	read info
	if [ "$info" == i ];then
		echo "$orange If the icmp_echo_ignore_all parameter is enabled, the kernel ignores all the ICMP echo
		requests sent to it."
	fi
	printf "Do you want to change value of icmp_ratelimit paramater?(y/n)"
	read response

	if [ "$response" == y ];then
		current_parameter=`cat /proc/sys/net/icmp_echo_ignore_all`
		echo "current value is $current_parameter"
		printf "Enter value you want:"
		read value
		if [ "$value" ];then
			sudo sysctl -w net.icmp_echo_ignore_all=$value
			echo "$green net.icmp_echo_ignore_all paramater changed [ OK ]"
		else
			echo "$orange Please Enter Valid Number"
		fi
	elif [ "$response" == n ];then
		echo "$blue You Dont want to change The value"
	else
		echo "$red Please Enter valid Value!!!"
	fi
fi

if [ "$parameter" == igmp_max_membership ];then
	echo "icmp_ratelimit => Maximum number of multicast groups [For More Info press i ]"
	read info
	if [ "$info" == i ];then
		echo "$orange The igmp_max_membership parameter is the maximum number of multicast groups we
		can subscribe to."
	fi
	printf "Do you want to change value of icmp_ratelimit paramater?(y/n)"
	read response

	if [ "$response" == y ];then
		current_parameter=`cat /proc/sys/net/igmp_max_membership`
		echo "current value is $current_parameter"
		printf "Enter value you want:"
		read value
		if [ "$value" ];then
			sudo sysctl -w net.igmp_max_membership=$value
			echo "$green net.igmp_max_membership paramater changed [ OK ]"
		else
			echo "$orange Please Enter Valid Number"
		fi
	elif [ "$response" == n ];then
		echo "$blue You Dont want to change The value"
	else
		echo "$red Please Enter valid Value!!!"
	fi
fi


